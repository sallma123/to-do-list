<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Titre -->
        <EditText
            android:id="@+id/titleInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Titre de la tâche"
            android:textSize="18sp"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background" />

        <!-- Description -->
        <EditText
            android:id="@+id/descriptionInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:padding="8dp"
            android:minLines="3"
            android:background="@android:drawable/editbox_background"
            android:layout_marginTop="12dp"/>

        <!-- Date -->
        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choisir une date"
            android:textSize="16sp"
            android:textColor="#0060C3"
            android:padding="12dp"
            android:layout_marginTop="12dp" />

        <!-- Sous-tâches -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sous-tâches"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>

        <!-- Zone dynamique -->
        <LinearLayout
            android:id="@+id/subTaskLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!-- Ajout de sous-tâche -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <EditText
                android:id="@+id/newSubTaskInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Nouvelle sous-tâche"
                android:padding="12dp" />

            <Button
                android:id="@+id/addSubTaskButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ajouter" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
